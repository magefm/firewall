<?xml version="1.0"?>
<config>
    <modules>
        <MageFM_Firewall>
            <version>0.1.0</version>
        </MageFM_Firewall>
    </modules>
    <global>
        <models>
            <magefm_firewall>
                <class>MageFM_Firewall_Model</class>
                <resourceModel>magefm_firewall_resource</resourceModel>
            </magefm_firewall>
            <magefm_firewall_resource>
                <class>MageFM_Firewall_Model_Resource</class>
                <entities>
                    <restriction_ip>
                        <table>magefm_firewall_restriction_ip</table>
                    </restriction_ip>
                </entities>
            </magefm_firewall_resource>
        </models>
        <resources>
            <magefm_firewall_setup>
                <setup>
                    <module>MageFM_Firewall</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </magefm_firewall_setup>
        </resources>
        <events>
            <controller_action_predispatch_onestepcheckout>
                <observers>
                    <magefm_firewall>
                        <class>magefm_firewall/observer</class>
                        <method>controllerPredispatch</method>
                    </magefm_firewall>
                </observers>
            </controller_action_predispatch_onestepcheckout>
            <controller_action_predispatch_checkout_onepage_index>
                <observers>
                    <magefm_firewall>
                        <class>magefm_firewall/observer</class>
                        <method>controllerPredispatch</method>
                    </magefm_firewall>
                </observers>
            </controller_action_predispatch_checkout_onepage_index>
            <controller_action_predispatch_checkout_onepage_saveOrder>
                <observers>
                    <magefm_firewall>
                        <class>magefm_firewall/observer</class>
                        <method>controllerPredispatch</method>
                    </magefm_firewall>
                </observers>
            </controller_action_predispatch_checkout_onepage_saveOrder>
        </events>
    </global>
    <crontab>
        <jobs>
            <magefm_firewall_check_orders>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>magefm_firewall/cronjob::execute</model>
                </run>
            </magefm_firewall_check_orders>
        </jobs>
    </crontab>
    <default>
        <sales>
            <magefm_firewall>
                <order_count>3</order_count>
                <time_span>20</time_span>
            </magefm_firewall>
        </sales>
    </default>
</config>
